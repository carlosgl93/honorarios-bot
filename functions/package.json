{
  "name": "sii-bot-functions",
  "version": "1.0.0",
  "description": "Firebase Functions for SII Honorarios Bot",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
